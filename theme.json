{
    "name": "Glass Lock Screen",
    "version": "v1.0",
    "author": "Yogeshvar",
    "target": "Lock Screen",
    "description": "Modern glassmorphism theme for Steam Deck lock screen",
    "manifest_version": 4,
    "inject": {
        "shared.css": [
            "SP"
        ]
    },
    "patches": {
        "Background Type": {
            "default": "Default",
            "type": "dropdown",
            "values":{
                "Default": {},
                "Transparent": {
                    "LockScreenContainerBackground/Transparent.css": [
                      "SP"
                    ]
                  },
                "Color": {
                    "LockScreenContainerBackground/Color.css": [
                      "SP"
                    ]
                  },
                "Image": {
                    "LockScreenContainerBackground/Image.css": [
                      "SP"
                    ]
                  }
            },"components": [
                {
                    "name": "Background Color Picker",
                    "type": "color-picker",
                    "on": "Color",
                    "default": "#1a1a1a",
                    "css_variable": "GLSContainerColor",
                    "tabs": ["SP"]
                },
                {
                    "name": "Background Image Picker",
                    "type": "image-picker",
                    "on": "Image",
                    "default": "https://media3.giphy.com/media/v1.Y2lkPTc5MGI3NjExYW9rOTFwaDBraDd2dThjZTd4dzdzcXU3MG04Z3FvbXZtaXJ2c3B4MCZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/SnVZO1N0Wo6u4/giphy.gif",
                    "css_variable": "GLSContainerImage",
                    "tabs": ["SP"]
                }
            ]
        },
        "Pin Pad Style": {
            "default": "Glass (Icons Only)",
            "type": "dropdown",
            "values":{
                "Glass (Icons Only)": {},
                "Standard (Icons + Numbers)": {
                    "PinPad-Hybrid.css": [
                      "SP"
                    ]
                  },
                  "Numbers Only": {
                    "PinPad-Numbers.css": [
                      "SP"
                    ]
                  },
                  "Icons Only": {
                    "PinPad-Icons.css": [
                      "SP"
                    ]
                  },
                  "No Pin Pad (WARNING: Controller Input ONLY)": {
                    "PinPad-None.css": [
                      "SP"
                    ]
                  }
            },"components": [
                {
                    "name": "Font Color Picker",
                    "type": "color-picker",
                    "on": "Numbers Only",
                    "default": "#fff",
                    "css_variable": "GLSFontColor",
                    "tabs": ["SP"]
                }
            ]
        }
    }
}